{% extends "layout.html.twig" %}
    {% block title %}Commands - {{ parent() }}{% endblock %}
    {% block head %}
        <script src="{{ app.request.basepath }}/js/jquery.dataTables.min.js"></script>
        <style type="text/css">
            .table {
                margin-bottom: 0;
            }
            .table > tbody > tr > td {
                vertical-align: middle!important;
            }

            td {
                padding: 8px 0!important;
                border-right: 1px solid #fff;
            }
            .ok {
                background: #5cb85c;
                color: #fff;
            }
            .dataTables_info {
                 position: absolute;
                 top: 72px;
             }
            #table_filter {
                text-align: right;
            }
            .dataTables_scrollBody {
                width: 99.2%!important;
            }
        </style>
    {% endblock %}
    {% block content %}
        <div class="fluid-container">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">Edit commands rank</h1>
                <table id="table" class="table table-hover">
                    <thead>
                    <tr class="top">
                        <th>Command</th>
                        <th>Rank 1</th>
                        <th>Rank 2</th>
                        <th>Rank 3</th>
                        <th>Rank 4</th>
                        <th>Rank 5</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for command in commands %}
                        <tr>
                            <td><strong>{{ command.name }}</strong></td>
                            <td{% if command.security <= 1 %} class="ok"{% endif %} onclick='updateCommand("{{ command.name }}", 1)' data-rank="1"></td>
                            <td{% if command.security <= 2 %} class="ok"{% endif %} onclick='updateCommand("{{ command.name }}", 2)' data-rank="2"></td>
                            <td{% if command.security <= 3 %} class="ok"{% endif %} onclick='updateCommand("{{ command.name }}", 3)' data-rank="3"></td>
                            <td{% if command.security <= 4 %} class="ok"{% endif %} onclick='updateCommand("{{ command.name }}", 4)' data-rank="4"></td>
                            <td{% if command.security <= 5 %} class="ok"{% endif %} onclick='updateCommand("{{ command.name }}", 5)' data-rank="5"></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    {% endblock %}
    {% block script %}
        <script type="text/javascript">
            $(document).ready(function() {
                var i;
                $('#table').dataTable( {
                    "scrollCollapse": false,
                    "paging":         false,
                    "order": [[ 2, "asc" ]]
                } );
                //set the cells visuals based on their status
                $('tbody td').click(function() {
                    var rank = $(this).attr('data-rank');
                    $(this).removeClass('ok').siblings().removeClass('ok');
                    switch(parseInt(rank))
                    {
                        case 1:
                            $(this).closest('tr').find(':nth-child(2)').addClass('ok').next().addClass('ok').next().addClass('ok').next().addClass('ok').next().addClass('ok');
                            break;
                        case 2:
                            $(this).closest('tr').find(':nth-child(3)').addClass('ok').next().addClass('ok').next().addClass('ok').next().addClass('ok');
                            break;
                        case 3:
                            $(this).closest('tr').find(':nth-child(4)').addClass('ok').next().addClass('ok').next().addClass('ok');
                            break;
                        case 4:
                            $(this).closest('tr').find(':nth-child(5)').addClass('ok').next().addClass('ok');
                            break;
                        case 5:
                            $(this).closest('tr').find(':nth-child(6)').addClass('ok');
                            break;
                        default: return;
                    }
                });
            });

            function updateCommand(name, rank)
            {
                var command = encode(name);
                var data = { command: command, rank: rank };
                $.ajax({
                    type: "POST",
                    url: '/account/commands',
                    data: { data:JSON.stringify(data) },
                    success: function(data) {
                        console.log(data);
                    },
                    error: function (xhr, err) {
                        console.log("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
                        console.log(xhr.responseText);
                    }
                });
            }
            function encode(str) {
                return btoa(encodeURIComponent(str).replace(/%([0-9A-F]{2})/g, function(match, p1) {
                    return String.fromCharCode('0x' + p1);
                }));
            }
        </script>
    {% endblock %}